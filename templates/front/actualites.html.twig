{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}
<div class="container px-5 pb-5">
   <h1 class="display-5 fw-bolder mb-0 pb-5"><span class="text-gradient d-inline">Actualités</span></h1>

   <div class="row gx-5 justify-content-center">
      <div class="col-lg-11 col-xl-9 col-xxl-8">

         {% for post in posts %}
         <div class="card overflow-hidden shadow rounded-4 border-0 mb-5">
            <div class="card-body p-0">
                <div class="d-flex align-items-center">
                    <div class="p-5">
                        <h2 class="fw-bolder">{{ post.title }}</h2>
                        <p>{{ post.content|raw }}</p>
                        <a href="{{ path('app_front_actu_detail', { 'id': post.id }) }}" class="btn btn-primary">Lire plus</a>
                        <p class="text-muted">Publié le {{ post.createdAt|date('d/m/Y') }}</p>
                        {% for tag in post.tags %}
                           <span class="badge bg-secondary">{{ tag.name }}</span>
                        {% endfor %}
                        <br>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}

      </div>
   </div>
</div>
 
{% endblock %}
